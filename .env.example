# ================================
# DisasterUnified Environment Variables - EXAMPLE
# ================================
# Copy this file to .env.local and fill in your actual values
# This file can be safely committed to version control

# ================================
# Database Configuration (Supabase)
# ================================
# Copy from your Supabase dashboard
# Used in: createClient(supabaseUrl, supabaseKey)
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# ================================
# API Keys for Disaster Data Sources
# ================================
# OpenAI API (includes Whisper for speech-to-text)
# NO separate SPEECH_API_KEY needed - Whisper is part of OpenAI
VITE_OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_API_KEY=sk-your_openai_api_key_here
VITE_WEATHER_API_KEY=your_weather_api_key_here
WEATHER_AI_API_KEY=your_weather_ai_api_key_here
INDIAN_API_KEY=your_indian_government_api_key_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# ================================
# Application URLs
# ================================
VITE_API_BASE_URL=http://localhost:3001
VITE_FLASK_API_URL=http://localhost:5000
VITE_APP_URL=http://localhost:3000

# ================================
# Security
# ================================
JWT_SECRET=your_jwt_secret_minimum_32_characters_long
SESSION_SECRET=your_session_secret_minimum_32_characters_long

# ================================
# Feature Flags
# ================================
VITE_ENABLE_VOICE_SUPPORT=true
VITE_ENABLE_LIVE_DATA=true
VITE_ENABLE_PREDICTIONS=true